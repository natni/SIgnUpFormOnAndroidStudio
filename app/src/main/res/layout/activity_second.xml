<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/app_background"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:gravity="center">



            <TextView
                android:layout_marginTop="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="WELCOME TO"
                android:textColor="#00BCD4"
                android:textSize="50dp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="MARCH-IO"
                android:background="@drawable/marchioshape"


                android:textColor="#F3E6E5"
                android:textSize="60dp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:background="@drawable/marchioshape"
                android:text="INVESTMENTS GROUP"
                android:textColor="#CDE1EEF4"
                android:textSize="29dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:layout_marginTop="120dp"
                android:text="Thanks for Signing Up"
                android:background="@drawable/nameshape"
                android:gravity="center"
                android:textColor="#00BCD4"
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/custUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:layout_marginTop="0dp"
                android:text="Username"
                android:background="@drawable/nameshape"
                android:gravity="center"
                android:textColor="#FAFBFB"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>